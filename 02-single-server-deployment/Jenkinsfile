pipeline {
    agent any

    environment {
        SERVER_IP = credentials('prod-server-ip')  // Injected from Jenkins credentials (as a secret text or username-password)
    }

    stages {
        stage('Package Locally') {
            steps {
                sh '''
                    if ! command -v zip &> /dev/null; then
                      echo "‚ùå zip is not installed. Install it with: sudo apt install -y zip"
                      exit 1
                    fi

                    zip -r myapp.zip ./* -x '*.git*'
                    ls -lart
                '''
            }
        }

        stage('Deploy and Run on Prod') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-key', keyFileVariable: 'MY_SSH_KEY', usernameVariable: 'username')]) {
                    sh '''
                    echo "üì¶ Uploading package to PROD server..."
                    scp -i $MY_SSH_KEY -o StrictHostKeyChecking=no myapp.zip ${username}@${SERVER_IP}:/home/ubuntu/

                    echo "üöÄ Connecting to PROD server and deploying..."
                    ssh -i $MY_SSH_KEY -o StrictHostKeyChecking=no ${username}@${SERVER_IP} << EOF
                        echo "üîç Unzipping package..."
                        unzip -o /home/ubuntu/myapp.zip -d /var/www/html/course-jenkins-project/02-single-server-deployment/

                        echo "üêç Activating virtualenv and installing requirements..."
                        cd /var/www/html/course-jenkins-project/02-single-server-deployment/
                        source venv/bin/activate
                        pip3 install -r requirements.txt

                        echo "üß™ Running tests..."
                        pytest

                        echo "üîÅ Restarting NGINX..."
                        sudo systemctl restart nginx
                    EOF
                    '''
                }
            }
        }
    }
}
