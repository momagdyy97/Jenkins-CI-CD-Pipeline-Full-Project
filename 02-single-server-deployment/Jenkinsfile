pipeline {
    agent any

    environment {
        SERVER_IP = credentials('prod-server-ip') // IP/Hostname stored in Jenkins Credentials
    }

    stages {
        stage('Package Locally') {
            steps {
                sh '''
                    echo "🔍 Checking for zip..."
                    if ! command -v zip &> /dev/null; then
                        echo "❌ zip is not installed. Installing now..."
                        sudo apt update && sudo apt install -y zip unzip
                    fi

                    echo "📦 Zipping project..."
                    zip -r myapp.zip ./* -x '*.git*'
                    echo "📂 Listing packaged files:"
                    ls -lart
                '''
            }
        }

        stage('Deploy and Run on Prod') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-key', keyFileVariable: 'MY_SSH_KEY', usernameVariable: 'username')]) {
                    sh '''
                    echo "📤 Uploading package to PROD server..."
                    scp -i $MY_SSH_KEY -o StrictHostKeyChecking=no myapp.zip ${username}@${SERVER_IP}:/home/ubuntu/

                    echo "🚀 Connecting to PROD server and deploying..."
                    ssh -i $MY_SSH_KEY -o StrictHostKeyChecking=no ${username}@${SERVER_IP} << 'EOF'
                        echo "🧼 Cleaning existing files..."
                        rm -rf /var/www/html/course-jenkins-project/02-single-server-deployment/__pycache__

                        echo "🔍 Unzipping package..."
                        unzip -o /home/ubuntu/myapp.zip -d /var/www/html/course-jenkins-project/02-single-server-deployment/

                        echo "🐍 Activating virtualenv and installing requirements..."
                        cd /var/www/html/course-jenkins-project/02-single-server-deployment/
                        source venv/bin/activate
                        pip3 install -r requirements.txt

                        echo "🧪 Running tests..."
                        pytest || echo "⚠️ Tests failed, but continuing deployment..."

                        echo "🔁 Restarting NGINX..."
                        sudo systemctl restart nginx
                    EOF
                    '''
                }
            }
        }
    }
}
