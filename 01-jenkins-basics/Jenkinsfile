pipeline {
    agent {
        docker {
            image 'python:3.10'
            args '-u root:root'
        }
    }

    environment {
        DB_HOST = '192.168.12.1'
        Test = 'Sent Successfully'
    }

    stages {
        stage('Install Git') {
            steps {
                sh 'apt-get update && apt-get install -y git'
                sh 'git --version'
                echo "The Database IP is ${DB_HOST}"
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
                sh 'ls -ltr'
            }
        }

        stage('Setup') {
            steps {
                dir('01-jenkins-basics') {
                    sh 'pip install -r requirements.txt'
                }
            }
        }

        stage('Test') {
            steps {
                dir('01-jenkins-basics') {
                    sh 'pytest'
                    echo "Test is ${Test}"
                }
            }
        }

        stage('Approval') {
            agent any
            steps {
                script {
                    input message: "Do you want to proceed further?", ok: "Yes"
                }
            }
        }

        stage('Deployment') {
            steps {
                dir('01-jenkins-basics') {
                    echo "Running Deployment"
                    // Add actual deployment commands here
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up resources...'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
