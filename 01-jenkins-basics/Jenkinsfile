pipeline {
    agent {
        docker {
            image 'python:3.10'
            args '-u root:root' // gives root permissions to install packages
        }
    }
    stages {
        stage('Install Git') {
            steps {
                sh 'apt-get update && apt-get install -y git'
                sh 'git --version'
            }
        }
        stage('Checkout') {
            steps {
                checkout scm
                sh 'ls -ltr'
            }
        }
        stage('Setup') {
            steps {
                dir('01-jenkins-basics') {
                    sh 'pip install -r requirements.txt'
                }
            }
        }
        stage('Test') {
            steps {
                dir('01-jenkins-basics') {
                    sh 'pytest'
                }
            }
        }
    }
}
