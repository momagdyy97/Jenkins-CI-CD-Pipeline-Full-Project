pipeline {
    agent {
        docker {
            image 'python:3.10'
            args '-u root:root'
        }
    }
    environment {
        DB_HOST = '192.168.12.1'
        Test = 'Sent Successfully'
    }
    stages {
        stage('Install Git & Setup') {
            steps {
                sh 'apt-get update && apt-get install -y git'
                sh 'git --version'
                echo "The Database IP is ${DB_HOST}"

                dir('01-jenkins-basics') {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                dir('01-jenkins-basics') {
                    sh '''
                        . venv/bin/activate
                        pytest
                    '''
                    echo "Test is ${Test}"
                }
            }
        }
        stage('Approval') {
            agent any
            steps {
                script {
                    input message: "Do you want to proceed further?", ok: "Yes"
                }
            }
        }
        stage('Deployment') {
            agent any
            steps {
                dir('01-jenkins-basics') {
                    echo "Running Deployment"
                    // Add deployment logic here (e.g., Docker Compose, SCP, etc.)
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up resources...'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
